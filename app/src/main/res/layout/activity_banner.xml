<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wellee.libbanner.view.BannerView
        android:id="@+id/bv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:bottomBackgroundColor="@color/black"
        app:bottomPadding="10dp"
        app:dotDrawableSelector="@drawable/banner_dot_bg_selector"
        app:dotMargin="5dp"
        app:dotSize="10dp"
        app:indicatorLocation="right"
        app:interval="2000"
        app:titleLocation="left"
        app:titleTextColor="@color/white"
        app:titleTextSize="@dimen/textSize_18" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:onClick="toSecond"
        android:text="SecondActivity"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>