<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="interval" format="integer" />
    <attr name="scrollDuration" format="integer" />

    <declare-styleable name="BannerViewPager">
        <attr name="interval" />
        <attr name="scrollDuration" />
    </declare-styleable>

    <declare-styleable name="BannerView">
        <attr name="interval" />
        <attr name="scrollDuration" />
        <attr name="hideBottom" format="boolean" />
        <attr name="hideIndicator" format="boolean" />
        <attr name="canTouchToPause" format="boolean" />
        <attr name="bottomHeight" format="dimension" />
        <attr name="bottomPadding" format="dimension" />
        <attr name="bottomBackgroundColor" format="color" />
        <attr name="indicatorLocation" format="enum">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="dotDrawableSelector" format="reference" />
        <attr name="dotSize" format="dimension" />
        <attr name="dotMargin" format="dimension" />
        <attr name="titleLocation" format="enum">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleTextColor" format="color" />
    </declare-styleable>
</resources>